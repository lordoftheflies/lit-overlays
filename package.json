{
  "name": "lit-combo-box",
  "version": "0.1.0",
  "description": "Prototype combo-box with lit-virtualizer",
  "keywords": [],
  "author": "Serhii Kulykov <iamkulykov@gmail.com>",
  "license": "MIT",
  "main": "lib/lit-combo-box.js",
  "module": "lib/lit-combo-box.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "lint:eslint": "eslint src --ext .ts",
    "lint:lit": "lit-analyzer src --strict",
    "lint": "npm-run-all --parallel lint:*",
    "dev": "webpack-dev-server",
    "build": "tsc",
    "size:check": "size-limit",
    "size:why": "size-limit --why"
  },
  "dependencies": {
    "lit-element": "^2.0.0",
    "lit-html": "^1.0.0",
    "lit-virtualizer": "^0.4.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "@zoltu/typescript-transformer-append-js-extension": "^1.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-lit": "^1.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.1",
    "lit-analyzer": "^1.1.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "size-limit": "^2.1.0",
    "ts-lit-plugin": "^1.1.8",
    "ttypescript": "^1.5.7",
    "typescript": "^3.5.3",
    "webpack": "^4.39.2",
    "webpack-babel-multi-target-plugin": "^2.3.0-alpha.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "lib/lit-combo-box.js",
      "limit": "20 KB"
    }
  ]
}
